---
import Header from '../components/Header.jsx';
import Layout from '../layouts/Layout.astro';
import HistoryTimeLine from '../components/HistoryTimeLine.jsx';
---

<Layout title="Rover History">
	<Header />
	<div class='grid grid-cols-6'>
		<div class='col-span-6'>
			<img
			class='mb-10 w-full h-48 object-cover overflow-hidden shadow-lg'
			src='/banner-history.png'
			alt='banner-history'
			/>
		</div>
		
		<div class='col-span-6'>
			<div class='text-6xl text-center font-bold mb-10'>Rover History</div>
		</div> 

		<span class='col-span-1' />
		<div class="col-span-4">
			<HistoryTimeLine client:load/>
		</div>
		<span class='col-span-1' />
	</div>




</Layout>
