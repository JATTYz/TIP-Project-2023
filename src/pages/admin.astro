---
import Header from '../components/Header.jsx';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<Header />
	<div class="px-10 text-3xl">
    <h1 class="text-center text-cyan-700 py-14">Admin Dashboard</h1>
    <div class="grid grid-rows-3 w-full h-auto text-center">
        <div class="py-3">
            <a href="/admin/approval">
            <button class="text-white border-4 border-amber-950 rounded-lg w-1/3 h-20 bg-amber-800">Pending Approval</button>
            </a>
        </div>
        <div class="py-3">
            <a href="/admin/createDocument">
            <button class="text-white border-4 border-amber-950 rounded-lg w-1/3 h-20 bg-amber-800">Create Documents</button>
            </a>
        </div>
    </div>
	</div>
</Layout>


